@model ContactModel


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delete Contact</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Delete Contact</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Contact</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" action="/Home/DeleteItem" enctype="multipart/form-data">
                        <div class="card-body">
                            @Html.HiddenFor(x => x.Id)
                            <div>
                                @Html.LabelFor(x => x.FirstName)
                                <br />
                                @Html.TextBoxFor(x => x.FirstName)
                            </div>
                            <br />

                            <div>
                                @Html.LabelFor(x => x.LastName)
                                <br />
                                @Html.TextBoxFor(x => x.LastName)
                            </div>
                            <br />
                            <div>
                                @Html.LabelFor(x => x.Email)
                                <br />
                                @Html.TextBoxFor(x => x.Email)
                            </div>
                            <br />
                            <div>
                                @Html.LabelFor(x => x.Phone)
                                <br />
                                @Html.TextBoxFor(x => x.Phone)
                            </div>
                            <br />
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary float-right ml-2">Confirm Deletion</button>
                            <a href="/Home/Index" class="btn btn-default float-right">Cancel</a>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
